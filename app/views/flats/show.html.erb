<div class="container">
  <div class="card">
    <div class="card-body">
      <h2><%= @flat.name %></h2>
      <p><%= @flat.address %></p>
      <p><%= @flat.description %></p>
      <p><i class="fa-solid fa-euro-sign"></i> <%= @flat.price_per_night %></p>
      <p ><i class="fa-solid fa-user fa-spin-pulse"></i> <%= @flat.number_of_guests %></p>
    </div>
    <div class="card-footer">
      <%= link_to "Back to list", flats_path, class: "btn btn-secondary btn-sm" %>
      <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn-primary btn-sm" %>
    </div>
  </div>
</div>
